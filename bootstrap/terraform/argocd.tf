resource "helm_release" "argocd" {
  name             = "argocd"
  repository       = "https://argoproj.github.io/argo-helm"
  chart            = "argo-cd"
  namespace        = "argocd"
  create_namespace = true
  version          = "5.41.2"
  values = [templatefile("values.yaml", {
    password = bcrypt("admin")
  })]
}